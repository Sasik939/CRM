@page
@model CrmAssistant.WebApp.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="max-w-md mx-auto bg-white rounded-lg shadow-md overflow-hidden mt-10">
    <div class="px-6 py-8">
        <h2 class="text-2xl font-bold text-center text-gray-800 mb-8">Create an Account</h2>
        
        <form method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>
            
            <div>
                <label asp-for="RegisterInput.FullName" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
                <input asp-for="RegisterInput.FullName" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="RegisterInput.FullName" class="text-red-500 text-xs"></span>
            </div>
            
            <div>
                <label asp-for="RegisterInput.Email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                <input asp-for="RegisterInput.Email" type="email" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="RegisterInput.Email" class="text-red-500 text-xs"></span>
            </div>
            
            <div>
                <label asp-for="RegisterInput.Username" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
                <input asp-for="RegisterInput.Username" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="RegisterInput.Username" class="text-red-500 text-xs"></span>
            </div>
            
            <div>
                <label asp-for="RegisterInput.Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                <input asp-for="RegisterInput.Password" type="password" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="RegisterInput.Password" class="text-red-500 text-xs"></span>
            </div>
            
            <div>
                <label asp-for="RegisterInput.ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
                <input asp-for="RegisterInput.ConfirmPassword" type="password" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="RegisterInput.ConfirmPassword" class="text-red-500 text-xs"></span>
            </div>
            
            <div>
                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Register
                </button>
            </div>
        </form>
    </div>
    
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
        <p class="text-sm text-center text-gray-600">
            Already have an account? <a href="/Account/Login" class="font-medium text-indigo-600 hover:text-indigo-500">Sign in</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
